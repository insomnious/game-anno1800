{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es5", "es6", "dom"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "jsx": "react",
    "skipLibCheck": true
  },
  "exclude": ["node_modules"],
  "include": ["src/index.ts"]
}
